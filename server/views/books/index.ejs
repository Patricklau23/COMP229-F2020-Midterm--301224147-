<% include (../partials/header.ejs) %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <% if(typeof displayName == 'string' && displayName) { %>
          <a href="/book-list/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a book</a>
          <% } %>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr class="d-flex">
                  <% if(typeof displayName == 'string' && displayName) { %>
                      <th class="text-center col-2">Title</th>
                      <th class="text-center col-2">Description</th>
                      <th class="text-center col-1">Price</th>
                      <th class="col-4">Author</th>
                      <th class="text-center col-1">Genre</th>
                      <th class="text-center col-1"></th>
                      <th class="text-center col-1"></th>
                  <% } else { %>
                    <th class="text-center col-2">Title</th>
                    <th class="text-center col-2">Description</th>
                    <th class="text-center col-1">Price</th>
                    <th class="text-center col-1">Author</th>
                    <th class="text-center col-1">Genre</th>
                  <% } %>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                <tr class="d-flex"></tr>
                <% if(typeof displayName == 'string' && displayName) { %>
                  <td class="text-center">$<%= books[count].Title %></td>
                  <td class="text-center">$<%= books[count].Description %></td>
                  <td class="text-center">$<%= books[count].Price %></td>
                  <td class="text-center"><%= books[count].Author %></td>
                  <td class="text-center"><%= books[count].Genre %></td>

                  <td class="text-center">
                    <a href="/book-list/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
                      <i class="fas fa-pencil-alt"></i> Edit</a>
                  </td>

                  <td class="text-center">
                    <a href="/book-list/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm">
                      <i class="fas fa-trash-alt"></i> Delete</a>
                  </td>
                  <% } else { %>
                    <td class="text-center col-2"><%= BookList[count].Title %></td>
                    <td class="text-center col-2"><%= BookList[count].Description %></td>
                    <td class="text-center col-1"><%= BookList[count].Price  %></td>
                    <td class="text-center"><%= books[count].Author %></td>
                    <td class="text-center col-1"><%= BookList[count].Genre %></td>  
                 <% } %>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include (../partials/footer.ejs) %>


